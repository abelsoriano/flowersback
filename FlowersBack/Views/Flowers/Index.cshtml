@model IEnumerable<FlowersBack.Models.Flower>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p> @*Nombre, Accion a ejecutar en el controlardo, parametros (los mando vacios), estilos o elementos html*@
    @*@Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })*@

   <a class="btn btn-primary" href="/Flowers/Create"> Create New <span class="glyphicon glyphicon-plus"></span> </a>
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Observation)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPurchase)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <img src="@Url.Content(item.Image)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                }

                @*@Html.DisplayFor(modelItem => item.Image)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Observation)
            </td>*@
            <td>
                <a class="btn btn-warning" href="/Flowers/Edit/@item.FlowerId"> Edit <span class="glyphicon glyphicon-edit"></span> </a>
                <a class="btn btn-info" href="/Flowers/Details/@item.FlowerId"> Details <span class="glyphicon glyphicon-exclamation-sign"></span> </a>
                <a class="btn btn-danger" href="/Flowers/Delete/@item.FlowerId"> Delete <span class="glyphicon glyphicon-trash"></span> </a>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.FlowerId }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Details", "Details", new { id = item.FlowerId }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.FlowerId }, new { @class = "btn btn-danger" })*@
            </td>
        </tr>
    }

</table>
